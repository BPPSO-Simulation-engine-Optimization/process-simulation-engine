{
  "manifest_version": 3,
  "name": "Click Tracker (Demo)",
  "version": "1.0.0",
  "description": "Zählt Klicks pro Domain lokal im Browser. Demo für MV3 mit Popup & Options.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Click Tracker",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
